<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatalogoApp.UI.MarcaPage"
             ControlTemplate="{StaticResource MainLayoutTemplate}"
             >

    <ScrollView>
        <FlexLayout>

            <!--Tabla-->
            <VerticalStackLayout Padding="20" Spacing="10">
                <Label Text="Gestión de Marcas" FontSize="Header" Margin="0,0,0,10" />

                <Grid Padding="10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Text="ID" FontAttributes="Bold" />
                    <Label Grid.Column="1" Text="Descripción" FontAttributes="Bold" />
                </Grid>

                <BoxView HeightRequest="1" Color="{StaticResource Gray200}" />

                <CollectionView ItemsSource="{Binding Marcas}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Text="{Binding IdMarca}" VerticalOptions="Center" />
                                <Label Grid.Column="1" Text="{Binding Descripcion}" VerticalOptions="Center" />

                                <HorizontalStackLayout Grid.Column="2" Spacing="5">
                                    <Button Text="Editar" WidthRequest="80" />
                                    <Button Text="Eliminar" BackgroundColor="{StaticResource Gray500}" WidthRequest="80" />
                                </HorizontalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>

            <!--Seccion de detalle-->
            <VerticalStackLayout>
                <Label Text="Detalles"></Label>
            </VerticalStackLayout>

        </FlexLayout>
    </ScrollView>
</ContentPage>